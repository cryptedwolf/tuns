.row
  .col-md-6.col-md-offset-3
    = form_for(current_user, :as => 'user', :url => complete_users_path(current_user), :html => { role: 'form'}) do |f| 
      - if @show_errors && current_user.errors.any?
        #error_explanation
          - current_user.errors.full_messages.each do |msg|
            = msg
      .form-group
        = f.label :email
        .controls
          = f.text_field :email, :autofocus => true, :value => '', class: 'form-control input-lg no-border-radius', placeholder: 'Example: email@me.com', required: true
          p.help-block Please confirm your email address. No spam.
      .actions
        = f.submit 'Continue', :class => 'btn btn-primary'